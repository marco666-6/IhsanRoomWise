@model List<dynamic>

@{
    ViewData["Title"] = "Find a Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Find a Room</h1>
        <p class="page-description">Search and book meeting rooms</p>
    </div>
    <div class="page-actions">
        <div class="view-toggle">
            <button class="view-btn active" data-view="card">
                <i class="fas fa-th-large"></i>
            </button>
            <button class="view-btn" data-view="table">
                <i class="fas fa-table"></i>
            </button>
        </div>
        <a href="@Url.Action("MyBookingsView")" class="btn btn-success">
            <i class="fas fa-calendar-check me-2"></i> My Bookings
        </a>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-primary">
                <i class="fas fa-door-open"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count</div>
                <div class="stat-label-sm">Total Rooms</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-success">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count(r => r.room_status == "Available")</div>
                <div class="stat-label-sm">Available Now</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-warning">
                <i class="fas fa-tools"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count(r => r.room_status == "Maintenance")</div>
                <div class="stat-label-sm">Maintenance</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-info">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@(Model.Any() ? Model.Average(r => (int)r.room_capacity).ToString("0") : "0")</div>
                <div class="stat-label-sm">Avg Capacity</div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Section -->
<div class="filter-section d-flex justify-content-center align-items-center">
    <div class="filter-group d-flex justify-content-start align-items-center gap-3">
        <div class="d-flex flex-column">
            <label>Location</label>
            <select class="filter-select" id="filterLocation">
                <option value="">All Locations</option>
                @foreach (var loc in ViewBag.Locations)
                {
                    <option value="@loc.location_id">@loc.location_plant_name - Block @loc.location_block, Floor @loc.location_floor</option>
                }
            </select>
        </div>
        <div class="d-flex flex-column">
            <label>Capacity</label>
            <select class="filter-select" id="filterCapacity" style="min-width:200px !important;">
                <option value="">Any Capacity</option>
                <option value="1-10">1-10 people</option>
                <option value="11-20">11-20 people</option>
                <option value="21-50">21-50 people</option>
                <option value="51+">51+ people</option>
            </select>
        </div>
        <div class="d-flex flex-column">
            <label>Status</label>
            <select class="filter-select" id="filterStatus">
                <option value="">All Status</option>
                <option value="Available">Available</option>
                <option value="Maintenance">Maintenance</option>
                <option value="OutOfService">Out of Service</option>
            </select>
        </div>
        <div class="d-flex flex-column">
            <label class="form-label">Facilities <small class="text-muted">(Keywords separated by commas)</small></label>
            <input type="text" class="form-control" id="filterFacilities" placeholder="e.g., Projector, WiFi" style="padding: 0.5rem 0.75rem !important; border-radius: 8px !important; font-size: 0.875rem !important; min-width: 200px;" />
        </div>
    </div>
    
    <div class="filter-actions">
        <button class="btn-primary" onclick="resetFilters()">
            <i class="fas fa-undo"></i> Reset
        </button>
    </div>
</div>

<!-- Card View -->
<div id="cardView">
    <div class="rooms-grid">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var room in Model)
            {
                <div class="room-card-item" 
                     data-location="@room.room_location_id" 
                     data-status="@room.room_status" 
                     data-capacity="@room.room_capacity"
                     data-facilities="@(room.room_facilities ?? "")">
                    <div class="room-card-header">
                        <div class="room-card-title">
                            <h5>@room.room_name</h5>
                            <span class="room-code">@room.room_code</span>
                        </div>
                        @if (room.room_status == "Available")
                        {
                            <span class="status-badge status-available">
                                <i class="fas fa-circle"></i> Available
                            </span>
                        }
                        else if (room.room_status == "Maintenance")
                        {
                            <span class="status-badge status-maintenance">
                                <i class="fas fa-circle"></i> Maintenance
                            </span>
                        }
                        else
                        {
                            <span class="status-badge status-out">
                                <i class="fas fa-circle"></i> Out of Service
                            </span>
                        }
                    </div>
                    <div class="room-card-body">
                        <div class="room-card-info">
                            <div class="info-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <div>
                                    <div class="info-label">Location</div>
                                    <div class="info-value">@room.location_plant_name</div>
                                    <div class="info-sub">Block @room.location_block, Floor @room.location_floor</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-users"></i>
                                <div>
                                    <div class="info-label">Capacity</div>
                                    <div class="info-value">@room.room_capacity people</div>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(room.room_facilities))
                        {
                            <div class="room-card-facilities">
                                <div class="facilities-label">Facilities:</div>
                                <div class="facilities-tags">
                                    @foreach (var facility in room.room_facilities.ToString().Split(','))
                                    {
                                        <span class="facility-tag">@facility.Trim()</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="room-card-footer">
                        @if (room.room_status == "Available")
                        {
                            <button class="btn btn-primary btn-block w-100" 
                                    onclick='openBookingModal(@room.room_id, "@room.room_name", "@room.room_code")'>
                                <i class="fas fa-calendar-plus me-2"></i> Book This Room
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-block w-100" disabled>
                                <i class="fas fa-ban me-2"></i> Not Available
                            </button>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-search fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No rooms found</h4>
                        <p class="text-muted">Try adjusting your search filters</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Table View -->
<div class="card" id="tableView" style="display: none;">
    <div class="card-body">
        <div class="table-responsive">
            <table id="roomsTable" class="table table-hover text-nowrap text-center align-middle">
                <thead>
                    <tr>
                        <th><div class="th-content"><i class="fas fa-barcode me-2"></i>Code</div></th>
                        <th><div class="th-content"><i class="fas fa-door-open me-2"></i>Room Name</div></th>
                        <th><div class="th-content"><i class="fas fa-map-marker-alt me-2"></i>Location</div></th>
                        <th><div class="th-content"><i class="fas fa-users me-2"></i>Capacity</div></th>
                        <th><div class="th-content"><i class="fas fa-cogs me-2"></i>Facilities</div></th>
                        <th><div class="th-content"><i class="fas fa-circle-dot me-2"></i>Status</div></th>
                        <th class="text-center"><div class="th-content justify-content-center"><i class="fas fa-tools me-2"></i>Actions</div></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var room in Model)
                        {
                            <tr data-location="@room.room_location_id" 
                                data-status="@room.room_status" 
                                data-capacity="@room.room_capacity"
                                data-facilities="@(room.room_facilities ?? "")">
                                <td><span class="room-code">@room.room_code</span></td>
                                <td>
                                    <div class="room-name-cell">
                                        <div class="room-icon-sm">
                                            <i class="fas fa-door-open"></i>
                                        </div>
                                        <span class="fw-semibold">@room.room_name</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="location-info">
                                        <div class="location-name">@room.location_plant_name</div>
                                        <div class="location-detail">Block @room.location_block, Floor @room.location_floor</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="capacity-badge">
                                        <i class="fas fa-users"></i> @room.room_capacity
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(room.room_facilities))
                                    {
                                        var facilities = ((string)room.room_facilities)
                                            .Split(',')
                                            .Select(f => f.Trim())
                                            .ToList();
                                        
                                        <div class="facilities-list">
                                            @foreach (var facility in facilities.Take(4))
                                            {
                                                <span class="facility-tag">@facility</span>
                                            }
                                            @if (facilities.Count > 4)
                                            {
                                                <span class="facility-more">+@(facilities.Count - 4)</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (room.room_status == "Available")
                                    {
                                        <span class="status-badge status-available">
                                            <i class="fas fa-circle"></i> Available
                                        </span>
                                    }
                                    else if (room.room_status == "Maintenance")
                                    {
                                        <span class="status-badge status-maintenance">
                                            <i class="fas fa-circle"></i> Maintenance
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-out">
                                            <i class="fas fa-circle"></i> Out of Service
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (room.room_status == "Available")
                                    {
                                        <button class="btn btn-sm btn-primary" 
                                                onclick='openBookingModal(@room.room_id, "@room.room_name", "@room.room_code")'>
                                            <i class="fas fa-calendar-plus me-1"></i> Book
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-secondary" disabled>
                                            <i class="fas fa-ban me-1"></i> Unavailable
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Modals {
<!-- Booking Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon">
                        <i class="fas fa-calendar-plus"></i>
                    </div>
                    <div>
                        <h5 class="modal-title">Book Meeting Room</h5>
                        <p class="modal-subtitle">Create a new booking request</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="bookingForm">
                    <input type="hidden" id="bookingRoomId" />
                    
                    <div class="alert alert-info d-flex align-items-center mb-3">
                        <i class="fas fa-door-open fa-2x me-3"></i>
                        <div>
                            <strong>Selected Room:</strong> <span id="bookingRoomName"></span><br>
                            <small class="text-muted">Code: <span id="bookingRoomCode"></span></small>
                        </div>
                    </div>
                    
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Meeting Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="bookingTitle" 
                                   placeholder="e.g., Weekly Team Meeting" required />
                        </div>
                        
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" id="bookingDescription" rows="3" 
                                      placeholder="Optional meeting description or notes"></textarea>
                        </div>
                        
                        <div class="col-md-4">
                            <label class="form-label">Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="bookingDate" required />
                        </div>
                        
                        <div class="col-md-4">
                            <label class="form-label">Start Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="bookingStartTime" required />
                        </div>
                        
                        <div class="col-md-4">
                            <label class="form-label">End Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="bookingEndTime" required />
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-3 mb-0 d-flex align-items-start">
                        <i class="fas fa-info-circle me-2 mt-1"></i>
                        <small>Your booking will be <strong>pending</strong> until approved by an administrator. 
                        You will be notified once your booking is reviewed.</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="submitBooking()">
                    <i class="fas fa-calendar-check me-2"></i> Submit Booking
                </button>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    <script>
        let roomsTable;
        let currentView = 'card';

        $(document).ready(function() {
            initializeDataTable();
            initializeFilters();
            initializeViewToggle();
            setDateConstraints();
        });

        function setDateConstraints() {
            const today = new Date().toISOString().split('T')[0];
            $('#bookingDate').attr('min', today);
        }

        function initializeDataTable() {
            roomsTable = $('#roomsTable').DataTable({
                responsive: false,
                scrollX: true,
                pageLength: 25,
                order: [[1, 'asc']],
                language: {
                    search: "",
                    searchPlaceholder: "🔍 Search rooms...",
                    lengthMenu: "Show _MENU_ rooms",
                    info: "Showing _START_ to _END_ of _TOTAL_ rooms",
                    emptyTable: `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-door-open fa-2x mb-2"></i>
                            <p class="mb-0">No rooms found</p>
                        </div>
                    `,
                    zeroRecords: `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-search fa-2x mb-2"></i>
                            <p class="mb-0">No matching rooms found</p>
                        </div>
                    `,
                    paginate: {
                        previous: "«",
                        next: "»"
                    }
                },
                dom:
                    "<'row mb-3'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row mt-3'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
            });
        }

        function initializeViewToggle() {
            $('.view-btn').on('click', function() {
                const view = $(this).data('view');
                switchView(view);
            });
        }

        function switchView(view) {
            currentView = view;
            $('.view-btn').removeClass('active');
            $(`.view-btn[data-view="${view}"]`).addClass('active');

            if (view === 'table') {
                $('#cardView').hide();
                $('#tableView').show();
                // Recalculate column widths after showing
                if (roomsTable) {
                    roomsTable.columns.adjust().draw();
                }
            } else {
                $('#tableView').hide();
                $('#cardView').show();
            }
        }

        function initializeFilters() {
            $('#filterLocation, #filterStatus, #filterCapacity, #filterFacilities').on('change keyup', applyFilters);
        }

        function applyFilters() {
            const location = $('#filterLocation').val();
            const status = $('#filterStatus').val();
            const capacity = $('#filterCapacity').val();
            const facilities = $('#filterFacilities').val().toLowerCase().trim();

            // Add this helper function to check facilities match
            function checkFacilities(roomFacilities) {
                if (!facilities) return true;
                if (!roomFacilities) return false;
                
                const searchTerms = facilities.split(',').map(f => f.trim().toLowerCase());
                const roomFacilitiesLower = roomFacilities.toLowerCase();
                
                return searchTerms.every(term => roomFacilitiesLower.includes(term));
            }

            if (currentView === 'table') {
                roomsTable.rows().every(function() {
                    const row = $(this.node());
                    let show = true;

                    if (location && row.data('location') != location) show = false;
                    if (status && row.data('status') !== status) show = false;
                    
                    if (capacity) {
                        const cap = parseInt(row.data('capacity'));
                        if (capacity === '1-10' && (cap < 1 || cap > 10)) show = false;
                        if (capacity === '11-20' && (cap < 11 || cap > 20)) show = false;
                        if (capacity === '21-50' && (cap < 21 || cap > 50)) show = false;
                        if (capacity === '51+' && cap < 51) show = false;
                    }
                    
                    // ADD THIS: Check facilities
                    if (!checkFacilities(row.data('facilities'))) show = false;

                    if (show) {
                        row.show();
                    } else {
                        row.hide();
                    }
                });
            } else {
                $('.room-card-item').each(function() {
                    const card = $(this);
                    let show = true;

                    if (location && card.data('location') != location) show = false;
                    if (status && card.data('status') !== status) show = false;
                    
                    if (capacity) {
                        const cap = parseInt(card.data('capacity'));
                        if (capacity === '1-10' && (cap < 1 || cap > 10)) show = false;
                        if (capacity === '11-20' && (cap < 11 || cap > 20)) show = false;
                        if (capacity === '21-50' && (cap < 21 || cap > 50)) show = false;
                        if (capacity === '51+' && cap < 51) show = false;
                    }
                    
                    // ADD THIS: Check facilities
                    if (!checkFacilities(card.data('facilities'))) show = false;

                    card.toggle(show);
                });
            }
        }

        function displayRooms(rooms) {
            if (rooms.length === 0) {
                const emptyHtml = `
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-search fa-4x text-muted mb-3"></i>
                                <h4 class="text-muted">No rooms found</h4>
                                <p class="text-muted">Try adjusting your search filters</p>
                            </div>
                        </div>
                    </div>
                `;
                
                if (currentView === 'card') {
                    $('#cardView .rooms-grid').html(emptyHtml);
                } else {
                    roomsTable.clear().draw();
                }
                return;
            }

            if (currentView === 'card') {
                displayCardView(rooms);
            } else {
                displayTableView(rooms);
            }
        }

        function displayCardView(rooms) {
            let html = '';
            rooms.forEach(room => {
                const statusBadge = getStatusBadge(room.room_status);
                const bookButton = room.room_status === 'Available' && room.is_available !== false
                    ? `<button class="btn btn-primary btn-block w-100" onclick='openBookingModal(${room.room_id}, "${room.room_name}", "${room.room_code}")'>
                        <i class="fas fa-calendar-plus me-2"></i> Book This Room
                       </button>`
                    : `<button class="btn btn-secondary btn-block w-100" disabled>
                        <i class="fas fa-ban me-2"></i> Not Available
                       </button>`;
                
                const facilitiesHtml = room.room_facilities 
                    ? `<div class="room-card-facilities">
                        <div class="facilities-label">Facilities:</div>
                        <div class="facilities-tags">
                            ${room.room_facilities.split(',').map(f => `<span class="facility-tag">${f.trim()}</span>`).join('')}
                        </div>
                       </div>`
                    : '';

                html += `
                    <div class="room-card-item">
                        <div class="room-card-header">
                            <div class="room-card-title">
                                <h5>${room.room_name}</h5>
                                <span class="room-code">${room.room_code}</span>
                            </div>
                            ${statusBadge}
                        </div>
                        <div class="room-card-body">
                            <div class="room-card-info">
                                <div class="info-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <div>
                                        <div class="info-label">Location</div>
                                        <div class="info-value">${room.location_plant_name}</div>
                                        <div class="info-sub">Block ${room.location_block}, Floor ${room.location_floor}</div>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-users"></i>
                                    <div>
                                        <div class="info-label">Capacity</div>
                                        <div class="info-value">${room.room_capacity} people</div>
                                    </div>
                                </div>
                            </div>
                            ${facilitiesHtml}
                        </div>
                        <div class="room-card-footer">
                            ${bookButton}
                        </div>
                    </div>
                `;
            });
            
            $('#cardView .rooms-grid').html(html);
        }

        function displayTableView(rooms) {
            roomsTable.clear();
            
            rooms.forEach(room => {
                const statusBadge = getStatusBadge(room.room_status);
                const facilitiesHtml = room.room_facilities 
                    ? room.room_facilities.split(',').slice(0, 4).map(f => `<span class="facility-tag">${f.trim()}</span>`).join(' ')
                    : '<span class="text-muted">—</span>';
                
                const bookButton = room.room_status === 'Available' && room.is_available !== false
                    ? `<button class="btn btn-sm btn-primary" onclick='openBookingModal(${room.room_id}, "${room.room_name}", "${room.room_code}")'>
                        <i class="fas fa-calendar-plus me-1"></i> Book
                       </button>`
                    : `<button class="btn btn-sm btn-secondary" disabled>
                        <i class="fas fa-ban me-1"></i> Unavailable
                       </button>`;

                roomsTable.row.add([
                    `<span class="room-code">${room.room_code}</span>`,
                    `<div class="room-name-cell">
                        <div class="room-icon-sm"><i class="fas fa-door-open"></i></div>
                        <span class="fw-semibold">${room.room_name}</span>
                     </div>`,
                    `<div class="location-info">
                        <div class="location-name">${room.location_plant_name}</div>
                        <div class="location-detail">Block ${room.location_block}, Floor ${room.location_floor}</div>
                     </div>`,
                    `<span class="capacity-badge"><i class="fas fa-users"></i> ${room.room_capacity}</span>`,
                    facilitiesHtml,
                    statusBadge,
                    bookButton
                ]);
            });
            
            roomsTable.draw();
        }

        function getStatusBadge(status) {
            if (status === 'Available') {
                return '<span class="status-badge status-available"><i class="fas fa-circle"></i> Available</span>';
            } else if (status === 'Maintenance') {
                return '<span class="status-badge status-maintenance"><i class="fas fa-circle"></i> Maintenance</span>';
            } else {
                return '<span class="status-badge status-out"><i class="fas fa-circle"></i> Out of Service</span>';
            }
        }

        function resetFilters() {
            $('#filterLocation, #filterStatus, #filterCapacity, #filterFacilities').val('').trigger('change');
            
            if (currentView === 'table') {
                roomsTable.rows().every(function() {
                    $(this.node()).show();
                });
            } else {
                $('.room-card-item').show();
            }
        }

        function openBookingModal(roomId, roomName, roomCode) {
            $('#bookingRoomId').val(roomId);
            $('#bookingRoomName').text(roomName);
            $('#bookingRoomCode').text(roomCode);
            $('#bookingForm')[0].reset();

            const modal = new bootstrap.Modal(document.getElementById('bookingModal'));
            modal.show();
        }

        function submitBooking() {
            const data = {
                roomId: $('#bookingRoomId').val(),
                title: $('#bookingTitle').val().trim(),
                description: $('#bookingDescription').val().trim(),
                date: $('#bookingDate').val(),
                startTime: $('#bookingStartTime').val(),
                endTime: $('#bookingEndTime').val()
            };

            if (!data.title || !data.date || !data.startTime || !data.endTime) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Information',
                    text: 'Please fill in all required fields',
                    confirmButtonColor: '#7aa22e'
                });
                return;
            }

            // Validate time range
            if (data.startTime >= data.endTime) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Time Range',
                    text: 'End time must be after start time',
                    confirmButtonColor: '#7aa22e'
                });
                return;
            }

            Swal.fire({
                title: 'Submitting...',
                allowOutsideClick: false,
                showConfirmButton: false,
                willOpen: () => { Swal.showLoading(); }
            });

            $.ajax({
                url: '@Url.Action("CreateBooking", "Employee")',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        $('#bookingModal').modal('hide');
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message || 'Booking request submitted successfully',
                            confirmButtonColor: '#7aa22e'
                        }).then(() => {
                            window.location.href = '@Url.Action("MyBookingsView", "Employee")';
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message || 'Failed to create booking',
                            confirmButtonColor: '#7aa22e'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to submit booking. Please try again.',
                        confirmButtonColor: '#7aa22e'
                    });
                }
            });
        }
    </script>
