@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Welcome Back, @HttpContextAccessor.HttpContext.Session.GetString("UserFullName")!</h1>
    <p class="page-description">Here's your booking overview</p>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-info">
                <i class="fas fa-calendar-day"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.MyBookingsToday</h3>
                <p class="stat-label">Today's Bookings</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-primary">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.MyUpcomingBookings</h3>
                <p class="stat-label">Upcoming Bookings</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-secondary">
                <i class="fas fa-history"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.MyPastBookings</h3>
                <p class="stat-label">Past Bookings</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-warning">
                <i class="fas fa-star"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.MyFeedbacksGiven</h3>
                <p class="stat-label">Feedbacks Given</p>
            </div>
        </div>
    </div>
</div>

<!-- Available Rooms Info -->
<div class="alert alert-success mb-4">
    <div class="d-flex align-items-center">
        <i class="fas fa-door-open fa-2x me-3"></i>
        <div class="flex-grow-1">
            <h5 class="mb-0">@ViewBag.AvailableRoomsNow Available Rooms Right Now</h5>
            <p class="mb-0">Click below to find and book a meeting room</p>
        </div>
        <a asp-action="FindRoomView" class="btn btn-success">
            <i class="fas fa-search me-2"></i> Find a Room
        </a>
    </div>
</div>

<!-- Upcoming Bookings -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">My Upcoming Bookings</h5>
        <a asp-action="MyBookingsView" class="btn btn-sm btn-primary">View All</a>
    </div>
    <div class="card-body">
        @if (ViewBag.UpcomingBookings != null && ViewBag.UpcomingBookings.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Room</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in ViewBag.UpcomingBookings)
                        {
                            <tr>
                                <td>@booking.booking_title</td>
                                <td>@booking.room_name</td>
                                <td>@booking.booking_date.ToString("MMM dd, yyyy")</td>
                                <td>@booking.booking_start_time.ToString(@"hh\:mm")</td>
                                <td>
                                    @if (booking.booking_status == "Pending")
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                    else if (booking.booking_status == "Confirmed")
                                    {
                                        <span class="badge bg-success">Confirmed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <p class="text-muted">No upcoming bookings</p>
                <a asp-action="FindRoomView" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i> Book a Room
                </a>
            </div>
        }
    </div>
</div>

<!-- Recent Activity -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Recent Activity</h5>
        <a asp-action="MyActivityLogsView" class="btn btn-sm btn-outline-secondary">View All</a>
    </div>
    <div class="card-body">
        @if (ViewBag.RecentActivity != null && ViewBag.RecentActivity.Count > 0)
        {
            <div class="activity-timeline">
                @foreach (var activity in ViewBag.RecentActivity)
                {
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="fas fa-circle"></i>
                        </div>
                        <div class="activity-content">
                            <strong>@activity.log_action</strong>
                            <p class="mb-0 text-muted">@activity.log_description</p>
                            <small class="text-muted">@activity.log_created_at.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                <p class="text-muted">No recent activity</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .activity-timeline {
            position: relative;
            padding-left: 30px;
        }
        
        .activity-timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e2e8f0;
        }
        
        .activity-item {
            position: relative;
            margin-bottom: 20px;
        }
        
        .activity-item:last-child {
            margin-bottom: 0;
        }
        
        .activity-icon {
            position: absolute;
            left: -26px;
            top: 0;
            width: 18px;
            height: 18px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .activity-icon i {
            font-size: 8px;
            color: #667eea;
        }
        
        .activity-content strong {
            color: #2d3748;
        }
    </style>
}