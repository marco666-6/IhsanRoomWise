@model List<dynamic>

@{
    ViewData["Title"] = "My Activity Logs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">My Activity Logs</h1>
        <p class="page-description">Track your system activities</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Count > 0)
        {
            <table id="logsTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Action</th>
                        <th>Description</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.log_id</td>
                            <td><span class="badge bg-primary">@log.log_action</span></td>
                            <td>@log.log_description</td>
                            <td>@log.log_created_at.ToString("MMM dd, yyyy HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Activity Logs</h4>
                <p class="text-muted">Your activities will appear here</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($('#logsTable').length) {
                $('#logsTable').DataTable({
                    order: [[3, 'desc']],
                    pageLength: 50
                });
            }
        });
    </script>
}