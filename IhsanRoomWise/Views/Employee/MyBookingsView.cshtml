@model List<dynamic>

@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">My Bookings</h1>
        <p class="page-description">View and manage your meeting room bookings</p>
    </div>
    <div>
        <a asp-action="FindRoomView" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> New Booking
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table id="bookingsTable" class="table table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Title</th>
                    <th>Room</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td><strong>@booking.booking_code</strong></td>
                        <td>@booking.booking_title</td>
                        <td>
                            @booking.room_code<br />
                            <small class="text-muted">@booking.room_name</small>
                        </td>
                        <td>@booking.location_plant_name</td>
                        <td>@booking.booking_date.ToString("MMM dd, yyyy")</td>
                        <td>
                            @booking.booking_start_time.ToString(@"hh\:mm") - 
                            @booking.booking_end_time.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @if (booking.booking_status == "Pending")
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else if (booking.booking_status == "Confirmed")
                            {
                                <span class="badge bg-success">Confirmed</span>
                            }
                            else if (booking.booking_status == "InProgress")
                            {
                                <span class="badge bg-info">In Progress</span>
                            }
                            else if (booking.booking_status == "Completed")
                            {
                                <span class="badge bg-primary">Completed</span>
                            }
                            else if (booking.booking_status == "Cancelled")
                            {
                                <span class="badge bg-danger">Cancelled</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info" onclick='viewBooking(@booking.booking_id, "@booking.booking_code", "@booking.booking_title", "@Html.Raw(booking.booking_description?.ToString().Replace("\"", "\\\"") ?? "")", "@booking.booking_date.ToString("yyyy-MM-dd")", "@booking.booking_start_time.ToString(@"hh\:mm")", "@booking.booking_end_time.ToString(@"hh\:mm")", "@booking.room_name", "@booking.location_plant_name", "@booking.booking_status", "@Html.Raw(booking.booking_cancel_reason?.ToString().Replace("\"", "\\\"") ?? "")")'>
                                <i class="fas fa-eye"></i>
                            </button>
                            @if (booking.booking_status == "Pending" || booking.booking_status == "Confirmed")
                            {
                                <button class="btn btn-sm btn-primary" onclick='editBooking(@booking.booking_id, "@booking.booking_title", "@Html.Raw(booking.booking_description?.ToString().Replace("\"", "\\\"") ?? "")", "@booking.booking_date.ToString("yyyy-MM-dd")", "@booking.booking_start_time.ToString(@"hh\:mm")", "@booking.booking_end_time.ToString(@"hh\:mm")")'>
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="cancelBooking(@booking.booking_id, '@booking.booking_code')">
                                    <i class="fas fa-times"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Modals {
<!-- View Booking Modal -->
<div class="modal fade" id="viewBookingModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Booking Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Booking Code:</strong>
                        <p id="viewCode"></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <p id="viewStatus"></p>
                    </div>
                </div>
                <div class="mb-3">
                    <strong>Title:</strong>
                    <p id="viewTitle"></p>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Room:</strong>
                        <p id="viewRoom"></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Location:</strong>
                        <p id="viewLocation"></p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Date:</strong>
                        <p id="viewDate"></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Time:</strong>
                        <p id="viewTime"></p>
                    </div>
                </div>
                <div class="mb-3">
                    <strong>Description:</strong>
                    <p id="viewDescription"></p>
                </div>
                <div id="cancelReasonSection" style="display: none;">
                    <div class="alert alert-danger">
                        <strong>Cancellation Reason:</strong>
                        <p id="viewCancelReason" class="mb-0"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Booking Modal -->
<div class="modal fade" id="editBookingModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editBookingForm">
                    <input type="hidden" id="editBookingId" />
                    <div class="mb-3">
                        <label class="form-label">Meeting Title *</label>
                        <input type="text" class="form-control" id="editTitle" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="editDescription" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Date *</label>
                            <input type="date" class="form-control" id="editDate" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Start Time *</label>
                            <input type="time" class="form-control" id="editStartTime" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">End Time *</label>
                            <input type="time" class="form-control" id="editEndTime" required />
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        After updating, your booking will require admin re-approval.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitUpdate()">
                    <i class="fas fa-save me-2"></i> Update Booking
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Booking Modal -->
<div class="modal fade" id="cancelBookingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="cancelBookingId" />
                <p>Are you sure you want to cancel booking <strong id="cancelBookingCode"></strong>?</p>
                <div class="mb-3">
                    <label class="form-label">Cancellation Reason *</label>
                    <textarea class="form-control" id="cancelReason" rows="3" placeholder="Please provide a reason" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="confirmCancel()">Cancel Booking</button>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#bookingsTable').DataTable({
                order: [[4, 'desc'], [5, 'desc']],
                pageLength: 25
            });
            
            const today = new Date().toISOString().split('T')[0];
            $('#editDate').attr('min', today);
        });
        
        function viewBooking(id, code, title, description, date, startTime, endTime, room, location, status, cancelReason) {
            $('#viewCode').text(code);
            $('#viewTitle').text(title);
            $('#viewRoom').text(room);
            $('#viewLocation').text(location);
            $('#viewDate').text(date);
            $('#viewTime').text(startTime + ' - ' + endTime);
            $('#viewDescription').text(description || 'No description provided');
            
            let statusBadge = '';
            if (status === 'Pending') statusBadge = '<span class="badge bg-warning">Pending</span>';
            else if (status === 'Confirmed') statusBadge = '<span class="badge bg-success">Confirmed</span>';
            else if (status === 'InProgress') statusBadge = '<span class="badge bg-info">In Progress</span>';
            else if (status === 'Completed') statusBadge = '<span class="badge bg-primary">Completed</span>';
            else if (status === 'Cancelled') statusBadge = '<span class="badge bg-danger">Cancelled</span>';
            $('#viewStatus').html(statusBadge);
            
            if (status === 'Cancelled' && cancelReason) {
                $('#viewCancelReason').text(cancelReason);
                $('#cancelReasonSection').show();
            } else {
                $('#cancelReasonSection').hide();
            }
            
            $('#viewBookingModal').modal('show');
        }
        
        function editBooking(id, title, description, date, startTime, endTime) {
            $('#editBookingId').val(id);
            $('#editTitle').val(title);
            $('#editDescription').val(description || '');
            $('#editDate').val(date);
            $('#editStartTime').val(startTime);
            $('#editEndTime').val(endTime);
            $('#editBookingModal').modal('show');
        }
        
        function submitUpdate() {
            const data = {
                bookingId: $('#editBookingId').val(),
                title: $('#editTitle').val(),
                description: $('#editDescription').val(),
                date: $('#editDate').val(),
                startTime: $('#editStartTime').val(),
                endTime: $('#editEndTime').val()
            };
            
            if (!data.title || !data.date || !data.startTime || !data.endTime) {
                Swal.fire('Error', 'Please fill in all required fields', 'error');
                return;
            }
            
            $.ajax({
                url: '@Url.Action("UpdateBooking", "Employee")',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        $('#editBookingModal').modal('hide');
                        Swal.fire('Success', response.message, 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', response.message, 'error');
                    }
                }
            });
        }
        
        function cancelBooking(bookingId, bookingCode) {
            $('#cancelBookingId').val(bookingId);
            $('#cancelBookingCode').text(bookingCode);
            $('#cancelReason').val('');
            $('#cancelBookingModal').modal('show');
        }
        
        function confirmCancel() {
            const bookingId = $('#cancelBookingId').val();
            const reason = $('#cancelReason').val().trim();
            
            if (!reason) {
                Swal.fire('Error', 'Please provide a cancellation reason', 'error');
                return;
            }
            
            $.ajax({
                url: '@Url.Action("CancelBooking", "Employee")',
                type: 'POST',
                data: {
                    bookingId: bookingId,
                    reason: reason
                },
                success: function(response) {
                    if (response.success) {
                        $('#cancelBookingModal').modal('hide');
                        Swal.fire('Success', response.message, 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', response.message, 'error');
                    }
                }
            });
        }
    </script>
}