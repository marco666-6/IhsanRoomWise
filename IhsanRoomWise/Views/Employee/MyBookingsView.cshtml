@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
<script>
    // Global variables
    let calendar;
    
    // Initialize on document ready
    $(document).ready(function() {
        initializeDataTable();
        initializeCalendar();
        initializeViewToggle();
        initializeFilters();
        setMinDate();
    });
    
    // Initialize DataTable
    function initializeDataTable() {
        $('#bookingsTable').DataTable({
            responsive: false,
                scrollX: true,
                pageLength: 25,
                order: [[4, 'desc'], [5, 'desc']],
                language: {
                    search: "",
                    searchPlaceholder: "🔍 Search bookings...",
                    lengthMenu: "Show _MENU_ bookings",
                    info: "Showing _START_ to _END_ of _TOTAL_ bookings",
                    emptyTable: `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                            <p class="mb-0">No bookings found</p>
                        </div>
                    `,
                    zeroRecords : `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-search fa-2x mb-2"></i>
                            <p class="mb-0">No matching bookings found</p>
                        </div>
                    `,
                    paginate: {
                        previous: "‹",
                        next: "›"
                    }
                },
                dom:
                    "<'row mb-3'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row mt-3'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
            });
    }
    
    // Initialize Calendar
    function initializeCalendar() {
        const calendarEl = document.getElementById('bookingCalendar');

        const bookings = @Html.Raw(Json.Serialize(Model));

        const events = bookings.map(b => {
        const date = b.booking_date.split('T')[0];
        const startTime = b.booking_start_time.substring(0, 5);
        const endTime = b.booking_end_time.substring(0, 5);

        return {
            title: `${b.booking_title} (${b.room_code})`, // ✅ Add room code to title
            start: `${date}T${startTime}:00`,
            end: `${date}T${endTime}:00`,
            classNames: [`status-${b.booking_status.toLowerCase()}`],
            extendedProps: {
                bookingId: b.booking_id,
                code: b.booking_code,
                room: b.room_name,
                roomCode: b.room_code, // ✅ Make sure this is included
                location: b.location_plant_name,
                status: b.booking_status,
                description: b.booking_description,
                cancelReason: b.booking_cancel_reason,
                startTime: startTime, // ✅ Store for later use
                endTime: endTime
            }
        };
    });

        calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
            },
            views: {
                dayGridMonth: { buttonText: 'Month' },
                timeGridWeek: { buttonText: 'Week' },
                timeGridDay: { buttonText: 'Day' },
                listWeek: { buttonText: 'List' }
            },
            events: events,
            height: 750,
            dayMaxEvents: 3,
            eventTimeFormat: {
                hour: '2-digit',
                minute: '2-digit',
                hour12: false
            },
            slotMinTime: '07:00:00',
            slotMaxTime: '20:00:00',
            allDaySlot: false,
            nowIndicator: true,
            
            // Event rendering with room badge
            eventDidMount: function(info) {
                const props = info.event.extendedProps;
                
                // Add room badge for better visibility
                if (props.roomCode) {
                    const badge = document.createElement('span');
                    badge.className = 'event-room-badge';
                    badge.textContent = props.roomCode;
                    info.el.appendChild(badge);
                }
                
                // Enhanced tooltip
                const tooltipContent = `
                    📌 ${props.title}
                    🚪 ${props.room || 'N/A'} (${props.roomCode || 'N/A'})
                    ⏰ ${info.event.start.toLocaleTimeString('en-US', {hour: '2-digit', minute: '2-digit'})} - ${info.event.end ? info.event.end.toLocaleTimeString('en-US', {hour: '2-digit', minute: '2-digit'}) : 'N/A'}
                    📊 Status: ${props.status}
                `.trim();
                
                info.el.title = tooltipContent;
            },
            eventClick(info) {
                const p = info.event.extendedProps;
                viewBooking(
                    p.bookingId,
                    p.code,
                    info.event.title,
                    p.description,
                    info.event.start.toISOString().split('T')[0],
                    p.startTime,
                    p.endTime,
                    p.room,
                    p.location,
                    p.status,
                    p.cancelReason
                );
            }
        });

        calendar.render();
    }
    
    // Initialize View Toggle
    function initializeViewToggle() {
        $('.view-btn').click(function() {
            const view = $(this).data('view');
            
            $('.view-btn').removeClass('active');
            $(this).addClass('active');
            
            $('#tableView, #calendarView').hide();
            
            if (view === 'table') {
                $('#tableView').show();
            } else if (view === 'calendar') {
                $('#calendarView').show();
                if (calendar) calendar.render();
            }
        });
    }
    
    // Initialize Filters
    function initializeFilters() {
        $('#filterStatus, #filterRoom, #filterDate').change(function() {
            applyFilters();
        });
    }
    
    // Apply Filters
    function applyFilters() {
        const status = $('#filterStatus').val();
        const room = $('#filterRoom').val();
        const dateRange = $('#filterDate').val();
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        
        // Filter table rows
        $('#bookingsTable tbody tr').each(function() {
            const row = $(this);
            const rowStatus = row.data('status');
            const rowRoom = row.data('room');
            const rowDate = new Date(row.data('date'));
            
            let showRow = true;
            
            if (status && rowStatus !== status) showRow = false;
            if (room && rowRoom !== room) showRow = false;
            
            if (dateRange) {
                if (dateRange === 'today' && rowDate.getTime() !== today.getTime()) showRow = false;
                if (dateRange === 'week') {
                    const weekFromNow = new Date(today);
                    weekFromNow.setDate(weekFromNow.getDate() + 7);
                    if (rowDate < today || rowDate > weekFromNow) showRow = false;
                }
                if (dateRange === 'month') {
                    const monthFromNow = new Date(today);
                    monthFromNow.setMonth(monthFromNow.getMonth() + 1);
                    if (rowDate < today || rowDate > monthFromNow) showRow = false;
                }
                if (dateRange === 'upcoming' && rowDate < today) showRow = false;
            }
            
            row.toggle(showRow);
        });

        // ✅ CALENDAR FILTER (THIS IS THE MISSING PART)
        if (calendar) {
            calendar.getEvents().forEach(event => {
                const props = event.extendedProps;
                let show = true;

                if (status && props.status !== status) show = false;
                if (room && props.roomCode !== room) show = false;

                if (dateRange) {
                    const eventDate = new Date(event.start);
                    eventDate.setHours(0,0,0,0);

                    if (dateRange === 'today' && eventDate.getTime() !== today.getTime()) show = false;
                    if (dateRange === 'week') {
                        const end = new Date(today);
                        end.setDate(end.getDate() + 7);
                        if (eventDate < today || eventDate > end) show = false;
                    }
                    if (dateRange === 'month') {
                        const end = new Date(today.getFullYear(), today.getMonth() + 1, 0);
                        if (eventDate < today || eventDate > end) show = false;
                    }
                    if (dateRange === 'upcoming' && eventDate < today) show = false;
                }

                event.setProp('display', show ? 'auto' : 'none');
            });
