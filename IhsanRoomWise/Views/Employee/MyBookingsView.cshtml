    }
    
    // Set minimum date for edit form
    function setMinDate() {
        const today = new Date().toISOString().split('T')[0];
        $('#editDate').attr('min', today);
    }
    
    // View Booking Details
    function viewBooking(id, code, title, description, date, startTime, endTime, room, location, status, cancelReason) {
        $('#viewCode').text(code);
        $('#viewTitle').text(title);
        $('#viewRoom').text(room);
        $('#viewLocation').text(location);
        
        // Format date
        const dateObj = new Date(date);
        const formattedDate = dateObj.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
        });
        $('#viewDate').text(formattedDate);
        $('#viewTime').text(startTime + ' - ' + endTime);
        $('#viewDescription').text(description || 'No description provided');
        
        // Status badge
        let statusBadge = '';
        if (status === 'Pending') {
            statusBadge = '<span class="status-badge status-pending"><i class="fas fa-circle"></i> Pending</span>';
        } else if (status === 'Confirmed') {
            statusBadge = '<span class="status-badge status-confirmed"><i class="fas fa-circle"></i> Confirmed</span>';
        } else if (status === 'InProgress') {
            statusBadge = '<span class="status-badge status-progress"><i class="fas fa-circle"></i> In Progress</span>';
        } else if (status === 'Completed') {
            statusBadge = '<span class="status-badge status-completed"><i class="fas fa-circle"></i> Completed</span>';
        } else if (status === 'Cancelled') {
            statusBadge = '<span class="status-badge status-cancelled"><i class="fas fa-circle"></i> Cancelled</span>';
        }
        $('#viewStatus').html(statusBadge);
        
        // Cancel reason
        if (status === 'Cancelled' && cancelReason) {
            $('#viewCancelReason').text(cancelReason);
            $('#cancelReasonSection').show();
        } else {
            $('#cancelReasonSection').hide();
        }
        
        $('#viewBookingModal').modal('show');
    }
    
    // Edit Booking
    function editBooking(id, title, description, date, startTime, endTime) {
        $('#editBookingId').val(id);
        $('#editTitle').val(title);
        $('#editDescription').val(description || '');
        $('#editDate').val(date);
        $('#editStartTime').val(startTime);
        $('#editEndTime').val(endTime);
        $('#editBookingModal').modal('show');
    }
    
    // Submit Update
    function submitUpdate() {
        const data = {
            bookingId: $('#editBookingId').val(),
            title: $('#editTitle').val(),
            description: $('#editDescription').val(),
            date: $('#editDate').val(),
            startTime: $('#editStartTime').val(),
            endTime: $('#editEndTime').val()
        };
        
        // Validation
        if (!data.title || !data.date || !data.startTime || !data.endTime) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Please fill in all required fields',
                confirmButtonColor: '#7aa22e'
            });
            return;
        }
        
        // Time validation
        if (data.startTime >= data.endTime) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Time',
                text: 'End time must be after start time',
                confirmButtonColor: '#7aa22e'
            });
            return;
        }
        
        $.ajax({
            url: '@Url.Action("UpdateBooking", "Employee")',
            type: 'POST',
            data: data,
            success: function(response) {
                if (response.success) {
                    $('#editBookingModal').modal('hide');
