@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Admin Dashboard</h1>
    <p class="page-description">Overview of system statistics and activities</p>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-primary">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.TotalUsers</h3>
                <p class="stat-label">Total Users</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-success">
                <i class="fas fa-door-open"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.TotalRooms</h3>
                <p class="stat-label">Total Rooms</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-info">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.TotalBookingsToday</h3>
                <p class="stat-label">Today's Bookings</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-warning">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.PendingBookings</h3>
                <p class="stat-label">Pending Approvals</p>
            </div>
        </div>
    </div>
</div>

<!-- Room Status Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="stat-card">
            <div class="stat-icon bg-success">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.AvailableRooms</h3>
                <p class="stat-label">Available Rooms</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="stat-card">
            <div class="stat-icon bg-danger">
                <i class="fas fa-tools"></i>
            </div>
            <div class="stat-details">
                <h3 class="stat-value">@ViewBag.MaintenanceRooms</h3>
                <p class="stat-label">Under Maintenance</p>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Bookings by Status</h5>
            </div>
            <div class="card-body">
                <div id="bookingsStatusChart"></div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Top Booked Rooms</h5>
            </div>
            <div class="card-body">
                <div id="topRoomsChart"></div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Bookings -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Recent Bookings</h5>
        <a asp-action="BookingsView" class="btn btn-sm btn-primary">View All</a>
    </div>
    <div class="card-body">
        @if (ViewBag.RecentBookings != null && ViewBag.RecentBookings.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Room</th>
                            <th>User</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in ViewBag.RecentBookings)
                        {
                            <tr>
                                <td>@booking.booking_title</td>
                                <td>@booking.room_name</td>
                                <td>@booking.user_full_name</td>
                                <td>@booking.booking_date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (booking.booking_status == "Pending")
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                    else if (booking.booking_status == "Confirmed")
                                    {
                                        <span class="badge bg-success">Confirmed</span>
                                    }
                                    else if (booking.booking_status == "Cancelled")
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@booking.booking_status</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No recent bookings</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            const hasStatusData = @(ViewBag.BookingsByStatus != null ? "true" : "false");
            const hasRoomsData  = @(ViewBag.TopRooms != null ? "true" : "false");

            if (hasStatusData) {
                const statusData = @Html.Raw(
                                    Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.BookingsByStatus ?? new { })
                            );

            Highcharts.chart('bookingsStatusChart', {
                chart: { type: 'pie' },
                title: { text: null },
                series: [{
                    data: Object.keys(statusData).map(k => ({
                        name: k,
                        y: statusData[k]
                    }))
                }]
            });
        }

            if (hasRoomsData) {
                const roomsData = @Html.Raw(
                                Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.TopRooms ?? new object[] { })
                        );

            Highcharts.chart('topRoomsChart', {
                chart: { type: 'bar' },
                title: { text: null },
                xAxis: {
                    categories: roomsData.map(r => r.room_name)
                },
                series: [{
                    data: roomsData.map(r => r.booking_count)
                }]
            });
        }

        });
    </script>

}