@model List<IhsanRoomWise.Models.Location>

@{
    ViewData["Title"] = "Locations Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Calculate stats
    var groupedByPlant = Model.GroupBy(l => l.location_plant_name).OrderBy(g => g.Key);
    var totalBlocks = Model.Select(l => new { l.location_plant_name, l.location_block }).Distinct().Count();
    var totalFloors = Model.Count;
}

<div class="page-header">
    <div>
        <h1 class="page-title">Locations Management</h1>
        <p class="page-description">Manage plant facilities, blocks, and floor configurations</p>
    </div>
    <div class="page-actions">
        <button class="view-btn active" id="tableViewBtn" onclick="switchView('table')">
            <i class="fas fa-table"></i>
        </button>
        <button class="view-btn" id="hierarchyViewBtn" onclick="switchView('hierarchy')">
            <i class="fas fa-sitemap"></i>
        </button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createLocationModal">
            <i class="fas fa-plus-circle me-2"></i> Add Location
        </button>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-primary">
                <i class="fas fa-industry"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@groupedByPlant.Count()</div>
                <div class="stat-label-sm">Total Plants</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-info">
                <i class="fas fa-building"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@totalBlocks</div>
                <div class="stat-label-sm">Total Blocks</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-warning">
                <i class="fas fa-layer-group"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@totalFloors</div>
                <div class="stat-label-sm">Total Floors</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-success">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count(l => l.location_is_active)</div>
                <div class="stat-label-sm">Active Locations</div>
            </div>
        </div>
    </div>
</div>

<!-- Table View -->
<div id="tableView" class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="locationsTable" class="table table-hover text-nowrap text-center align-middle">
                <thead>
                    <tr>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-barcode me-2"></i>Code
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-industry me-2"></i>Plant
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-building me-2"></i>Block
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-layer-group me-2"></i>Floor
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-circle-dot me-2"></i>Status
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-calendar me-2"></i>Created
                            </div>
                        </th>
                        <th class="text-center">
                            <div class="th-content justify-content-center">
                                <i class="fas fa-cog me-2"></i>Actions
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var location in Model)
                    {
                        <tr>
                            <td>
                                <span class="location-code">@location.location_code</span>
                            </td>
                            <td>
                                <div class="plant-info-cell">
                                    <div class="plant-icon">
                                        <i class="fas fa-industry"></i>
                                    </div>
                                    <span class="fw-semibold">@location.location_plant_name</span>
                                </div>
                            </td>
                            <td>
                                <span class="location-badge badge-block">
                                    <i class="fas fa-building me-1"></i>Block @location.location_block
                                </span>
                            </td>
                            <td>
                                <span class="location-badge badge-floor">
                                    <i class="fas fa-layer-group me-1"></i>Floor @location.location_floor
                                </span>
                            </td>
                            <td>
                                @if (location.location_is_active)
                                {
                                    <span class="status-badge status-active">
                                        <i class="fas fa-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">
                                        <i class="fas fa-circle"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="date-text">@location.location_created_at.ToString("MMM dd, yyyy")</span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-action-edit" 
                                            onclick="editLocation(@location.location_id, '@location.location_plant_name', @location.location_block, @location.location_floor)"
                                            title="Edit Location">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-action btn-action-toggle" 
                                            onclick="toggleLocationStatus(@location.location_id, @location.location_is_active.ToString().ToLower())"
                                            title="@(location.location_is_active ? "Deactivate" : "Activate")">
                                        <i class="fas fa-@(location.location_is_active ? "ban" : "check-circle")"></i>
                                    </button>
                                    <button class="btn-action btn-action-info" 
                                            onclick="viewLocationDetails(@location.location_id)"
                                            title="View Details">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Hierarchy View -->
<div id="hierarchyView" class="card" style="display: none;">
    <div class="card-body">
        <div class="hierarchy-container">
            @foreach (var plant in groupedByPlant)
            {
                var plantLocations = plant.ToList();
                var plantBlocks = plantLocations.GroupBy(l => l.location_block).OrderBy(g => g.Key);
                var activeCount = plantLocations.Count(l => l.location_is_active);
                
                <div class="plant-section">
                    <div class="plant-header">
                        <div class="plant-title-section">
                            <div class="plant-icon-large">
                                <i class="fas fa-industry"></i>
                            </div>
                            <div>
                                <h4 class="plant-name">@plant.Key</h4>
                                <div class="plant-stats">
                                    <span class="plant-stat">
                                        <i class="fas fa-building"></i> @plantBlocks.Count() Blocks
                                    </span>
                                    <span class="plant-stat">
                                        <i class="fas fa-layer-group"></i> @plantLocations.Count Floors
                                    </span>
                                    <span class="plant-stat">
                                        <i class="fas fa-check-circle text-success"></i> @activeCount Active
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="blocks-grid">
                        @foreach (var block in plantBlocks)
                        {
                            var blockFloors = block.OrderBy(l => l.location_floor).ToList();
                            
                            <div class="block-card">
                                <div class="block-header">
                                    <div class="block-icon">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <h5 class="block-title">Block @block.Key</h5>
                                        <p class="block-subtitle">@blockFloors.Count Floor(s)</p>
                                    </div>
                                </div>
                                
                                <div class="floors-list">
                                    @foreach (var floor in blockFloors)
                                    {
                                        <div class="floor-item @(floor.location_is_active ? "floor-active" : "floor-inactive")">
                                            <div class="floor-info">
                                                <div class="floor-icon-wrapper">
                                                    <i class="fas fa-layer-group"></i>
                                                </div>
                                                <div>
                                                    <div class="floor-name">Floor @floor.location_floor</div>
                                                    <div class="floor-code">@floor.location_code</div>
                                                </div>
                                            </div>
                                            <div class="floor-actions">
                                                @if (floor.location_is_active)
                                                {
                                                    <span class="floor-status-badge active-badge">
                                                        <i class="fas fa-circle"></i>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="floor-status-badge inactive-badge">
                                                        <i class="fas fa-circle"></i>
                                                    </span>
                                                }
                                                <button class="btn-floor-action" 
                                                        onclick="editLocation(@floor.location_id, '@floor.location_plant_name', @floor.location_block, @floor.location_floor)"
                                                        title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Modals {
<!-- Create Location Modal -->
<div class="modal fade" id="createLocationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <div>
                        <h5 class="modal-title">Add New Location</h5>
                        <p class="modal-subtitle">Create a new floor location</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createLocationForm">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Location Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="createCode" placeholder="e.g., PLANT1-B1-F1" required />
                            <small class="form-text text-muted">Format: PLANT[X]-B[Block]-F[Floor]</small>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Plant Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="createPlantName" placeholder="e.g., Plant 1" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Block Number <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="createBlock" min="1" max="255" placeholder="1" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Floor Number <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="createFloor" min="1" max="255" placeholder="1" required />
                        </div>
                    </div>
                    
                    <div class="location-preview mt-3 p-3 bg-light rounded">
                        <strong class="d-block mb-2"><i class="fas fa-eye me-2"></i>Preview:</strong>
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-industry text-primary"></i>
                            <span id="previewPlant" class="text-muted">Plant Name</span>
                            <i class="fas fa-chevron-right text-muted"></i>
                            <i class="fas fa-building text-info"></i>
                            <span id="previewBlock" class="text-muted">Block #</span>
                            <i class="fas fa-chevron-right text-muted"></i>
                            <i class="fas fa-layer-group text-warning"></i>
                            <span id="previewFloor" class="text-muted">Floor #</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createLocation()">
                    <i class="fas fa-plus-circle me-2"></i>Create Location
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Location Modal -->
<div class="modal fade" id="editLocationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon bg-info">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div>
                        <h5 class="modal-title">Edit Location</h5>
                        <p class="modal-subtitle">Update location details</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editLocationForm">
                    <input type="hidden" id="editLocationId" />
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Plant Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editPlantName" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Block Number <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="editBlock" min="1" max="255" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Floor Number <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="editFloor" min="1" max="255" required />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateLocation()">
                    <i class="fas fa-save me-2"></i>Update Location
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Location Details Modal -->
<div class="modal fade" id="locationDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div>
                        <h5 class="modal-title">Location Details</h5>
                        <p class="modal-subtitle">View complete location information</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="locationDetailsContent">
                <!-- Details will be loaded here -->
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
<script>
    $(document).ready(function() {
        initializeDataTable();
        // Live preview for create modal
        $('#createPlantName, #createBlock, #createFloor').on('input', function() {
            updateLocationPreview();
        });
    });

    function initializeDataTable() {
            Table1 = $('#locationsTable').DataTable({
                responsive: false,
                scrollX: true,
                pageLength: 25,
                order: [[6, 'desc']], // Sort by created date
                language: {
                    search: "",
                    searchPlaceholder: "🔍 Search locations...",
                    lengthMenu: "Show _MENU_ locations",
                    info: "Showing _START_ to _END_ of _TOTAL_ locations",
                    emptyTable: `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-map-marker-alt fa-2x mb-2"></i>
                            <p class="mb-0">No locations found</p>
                        </div>
                    `,
                    zeroRecords : `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-search fa-2x mb-2"></i>
                            <p class="mb-0">No locations found</p>
                        </div>
                    `,
                    paginate: {
                        previous: "‹",
                        next: "›"
                    }
                },
                dom:
                    "<'row mb-3'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row mt-3'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
            });
        }
    
    function updateLocationPreview() {
        const plant = $('#createPlantName').val() || 'Plant Name';
        const block = $('#createBlock').val() || '#';
        const floor = $('#createFloor').val() || '#';
        
        $('#previewPlant').text(plant);
        $('#previewBlock').text('Block ' + block);
        $('#previewFloor').text('Floor ' + floor);
    }
    
    function switchView(view) {
        if (view === 'table') {
            $('#tableView').show();
            $('#hierarchyView').hide();
            $('#tableViewBtn').addClass('active');
            $('#hierarchyViewBtn').removeClass('active');
        } else {
            $('#tableView').hide();
            $('#hierarchyView').show();
            $('#tableViewBtn').removeClass('active');
            $('#hierarchyViewBtn').addClass('active');
        }
    }
    
    function createLocation() {
        const data = {
            code: $('#createCode').val(),
            plantName: $('#createPlantName').val(),
            block: parseInt($('#createBlock').val()),
            floor: parseInt($('#createFloor').val())
        };
        
        if (!data.code || !data.plantName || !data.block || !data.floor) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Please fill in all required fields',
                confirmButtonColor: '#7aa22e'
            });
            return;
        }
        
        $.ajax({
            url: '@Url.Action("CreateLocation", "Admin")',
            type: 'POST',
            data: data,
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: response.message,
                        confirmButtonColor: '#7aa22e'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message,
                        confirmButtonColor: '#7aa22e'
                    });
                }
            },
            error: function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to create location',
                    confirmButtonColor: '#7aa22e'
                });
            }
        });
    }
    
    function editLocation(id, plantName, block, floor) {
        $('#editLocationId').val(id);
        $('#editPlantName').val(plantName);
        $('#editBlock').val(block);
        $('#editFloor').val(floor);
        $('#editLocationModal').modal('show');
    }
    
    function updateLocation() {
        const data = {
            locationId: $('#editLocationId').val(),
            plantName: $('#editPlantName').val(),
            block: parseInt($('#editBlock').val()),
            floor: parseInt($('#editFloor').val())
        };
        
        $.ajax({
            url: '@Url.Action("UpdateLocation", "Admin")',
            type: 'POST',
            data: data,
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: response.message,
                        confirmButtonColor: '#7aa22e'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message,
                        confirmButtonColor: '#7aa22e'
                    });
                }
            },
            error: function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to update location',
                    confirmButtonColor: '#7aa22e'
                });
            }
        });
    }
    
    function toggleLocationStatus(locationId, isActive) {
        const action = isActive ? 'deactivate' : 'activate';
        Swal.fire({
            title: 'Are you sure?',
            text: `Do you want to ${action} this location?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#7aa22e',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, proceed!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("ToggleLocationStatus", "Admin")',
                    type: 'POST',
                    data: { locationId: locationId, isActive: !isActive },
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: response.message,
                                confirmButtonColor: '#7aa22e'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message,
                                confirmButtonColor: '#7aa22e'
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to toggle location status',
                            confirmButtonColor: '#7aa22e'
                        });
                    }
                });
            }
        });
    }
    
    function viewLocationDetails(locationId) {
        // This would fetch and display detailed info about the location
        // For now, showing a placeholder
        $('#locationDetailsContent').html('<p class="text-center"><i class="fas fa-spinner fa-spin"></i> Loading...</p>');
        $('#locationDetailsModal').modal('show');
        
        // TODO: Implement actual details fetching
        setTimeout(() => {
            $('#locationDetailsContent').html(`
                <div class="location-detail-item">
                    <i class="fas fa-info-circle text-primary"></i>
                    <span>Location details functionality can be implemented here</span>
                </div>
            `);
        }, 500);
    }
</script>
}

