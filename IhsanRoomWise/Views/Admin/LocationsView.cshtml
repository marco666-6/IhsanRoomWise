@model List<IhsanRoomWise.Models.Location>

@{
    ViewData["Title"] = "Locations Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Locations Management</h1>
        <p class="page-description">Manage plant locations, blocks, and floors</p>
    </div>
    <div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createLocationModal">
            <i class="fas fa-plus me-2"></i> Add New Location
        </button>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table id="locationsTable" class="table table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Plant Name</th>
                    <th>Block</th>
                    <th>Floor</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var location in Model)
                {
                    <tr>
                        <td><strong>@location.location_code</strong></td>
                        <td>@location.location_plant_name</td>
                        <td>Block @location.location_block</td>
                        <td>Floor @location.location_floor</td>
                        <td>
                            @if (location.location_is_active)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@location.location_created_at.ToString("MMM dd, yyyy")</td>
                        <td>
                            <button class="btn btn-sm btn-info" onclick="editLocation(@location.location_id, '@location.location_plant_name', @location.location_block, @location.location_floor)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-warning" onclick="toggleLocationStatus(@location.location_id, @location.location_is_active.ToString().ToLower())">
                                <i class="fas fa-@(location.location_is_active ? "ban" : "check")"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
<!-- Create Location Modal -->
<div class="modal fade" id="createLocationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createLocationForm">
                    <div class="mb-3">
                        <label class="form-label">Location Code *</label>
                        <input type="text" class="form-control" id="createCode" placeholder="e.g., PLANT-A-B1-F1" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Plant Name *</label>
                        <input type="text" class="form-control" id="createPlantName" placeholder="e.g., Plant A" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Block Number *</label>
                        <input type="number" class="form-control" id="createBlock" min="1" max="255" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Floor Number *</label>
                        <input type="number" class="form-control" id="createFloor" min="1" max="255" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createLocation()">Create Location</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Location Modal -->
<div class="modal fade" id="editLocationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editLocationForm">
                    <input type="hidden" id="editLocationId" />
                    <div class="mb-3">
                        <label class="form-label">Plant Name *</label>
                        <input type="text" class="form-control" id="editPlantName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Block Number *</label>
                        <input type="number" class="form-control" id="editBlock" min="1" max="255" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Floor Number *</label>
                        <input type="number" class="form-control" id="editFloor" min="1" max="255" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateLocation()">Update Location</button>
            </div>
        </div>
    </div>
</div>
}

@section Modals {
    <script>
        $(document).ready(function() {
            $('#locationsTable').DataTable({
                order: [[1, 'asc'], [2, 'asc'], [3, 'asc']]
            });
        });
        
        function createLocation() {
            const data = {
                code: $('#createCode').val(),
                plantName: $('#createPlantName').val(),
                block: $('#createBlock').val(),
                floor: $('#createFloor').val()
            };
            
            if (!data.code || !data.plantName || !data.block || !data.floor) {
                Swal.fire('Error', 'Please fill in all required fields', 'error');
                return;
            }
            
            $.ajax({
                url: '@Url.Action("CreateLocation", "Admin")',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        Swal.fire('Success', response.message, 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', response.message, 'error');
                    }
                }
            });
        }
        
        function editLocation(id, plantName, block, floor) {
            $('#editLocationId').val(id);
            $('#editPlantName').val(plantName);
            $('#editBlock').val(block);
            $('#editFloor').val(floor);
            $('#editLocationModal').modal('show');
        }
        
        function updateLocation() {
            const data = {
                locationId: $('#editLocationId').val(),
                plantName: $('#editPlantName').val(),
                block: $('#editBlock').val(),
                floor: $('#editFloor').val()
            };
            
            $.ajax({
                url: '@Url.Action("UpdateLocation", "Admin")',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        Swal.fire('Success', response.message, 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', response.message, 'error');
                    }
                }
            });
        }
        
        function toggleLocationStatus(locationId, isActive) {
            const action = isActive ? 'deactivate' : 'activate';
            Swal.fire({
                title: 'Are you sure?',
                text: `Do you want to ${action} this location?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, proceed'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("ToggleLocationStatus", "Admin")',
                        type: 'POST',
                        data: { locationId: locationId, isActive: !isActive },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire('Success', response.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Error', response.message, 'error');
                            }
                        }
                    });
                }
            });
        }
    </script>
}