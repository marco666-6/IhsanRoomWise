@model List<IhsanRoomWise.Models.User>

@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Users Management</h1>
        <p class="page-description">Manage system users and their access permissions</p>
    </div>
    <div class="page-actions">
        <button class="btn btn-success" onclick="exportUsers()">
            <i class="fas fa-file-excel me-2"></i> Export
        </button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createUserModal">
            <i class="fas fa-user-plus me-2"></i> Add User
        </button>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-primary">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count</div>
                <div class="stat-label-sm">Total Users</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-success">
                <i class="fas fa-user-check"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count(u => u.user_is_active)</div>
                <div class="stat-label-sm">Active Users</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-danger">
                <i class="fas fa-user-shield"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count(u => u.user_role == "Admin")</div>
                <div class="stat-label-sm">Admins</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-sm">
            <div class="stat-icon-sm bg-info">
                <i class="fas fa-user-tie"></i>
            </div>
            <div class="stat-details-sm">
                <div class="stat-value-sm">@Model.Count(u => u.user_role == "Employee")</div>
                <div class="stat-label-sm">Employees</div>
            </div>
        </div>
    </div>
</div>

<!-- Users Table Card -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="usersTable" class="table table-hover text-nowrap text-center align-middle">
                <thead>
                    <tr>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-id-badge me-2"></i>Employee ID
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-user me-2"></i>Full Name
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-envelope me-2"></i>Email
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-user-tag me-2"></i>Role
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-building me-2"></i>Department
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-circle-dot me-2"></i>Status
                            </div>
                        </th>
                        <th>
                            <div class="th-content">
                                <i class="fas fa-calendar me-2"></i>Created
                            </div>
                        </th>
                        <th class="text-center">
                            <div class="th-content justify-content-center">
                                <i class="fas fa-cog me-2"></i>Actions
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <span class="user-id">@user.user_employee_id</span>
                            </td>
                            <td>
                                <div class="user-info-cell">
                                    <div class="user-avatar-sm">
                                        @user.user_full_name.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="fw-semibold">@user.user_full_name</span>
                                </div>
                            </td>
                            <td>
                                <a href="mailto:@user.user_email" class="email-link">
                                    @user.user_email
                                </a>
                            </td>
                            <td>
                                @if (user.user_role == "Admin")
                                {
                                    <span class="badge-role badge-admin">
                                        <i class="fas fa-crown me-1"></i>Admin
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-role badge-employee">
                                        <i class="fas fa-user me-1"></i>Employee
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="dept-badge">
                                    @(user.user_dept_name ?? "—")
                                </span>
                            </td>
                            <td>
                                @if (user.user_is_active)
                                {
                                    <span class="status-badge status-active">
                                        <i class="fas fa-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">
                                        <i class="fas fa-circle"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="date-text">@user.user_created_at.ToString("MMM dd, yyyy")</span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-action-edit" 
                                            onclick="editUser(@user.user_id, '@user.user_full_name', '@user.user_email', '@user.user_role', '@user.user_dept_name')"
                                            title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-action btn-action-toggle" 
                                            onclick="toggleUserStatus(@user.user_id, @user.user_is_active.ToString().ToLower())"
                                            title="@(user.user_is_active ? "Deactivate" : "Activate")">
                                        <i class="fas fa-@(user.user_is_active ? "ban" : "check-circle")"></i>
                                    </button>
                                    <button class="btn-action btn-action-key" 
                                            onclick="resetPassword(@user.user_id, '@user.user_full_name')"
                                            title="Reset Password">
                                        <i class="fas fa-key"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Modals {
<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div>
                        <h5 class="modal-title">Add New User</h5>
                        <p class="modal-subtitle">Create a new user account</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createUserForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Employee ID <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="createEmployeeId" required placeholder="e.g., EMP001" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="createFullName" required placeholder="John Doe" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="createEmail" required placeholder="john.doe@company.com" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Role <span class="text-danger">*</span></label>
                            <select class="form-control" id="createRole" required>
                                <option value="">Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Employee">Employee</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Department</label>
                            <input type="text" class="form-control" id="createDept" placeholder="e.g., IT" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="createPassword" required placeholder="Minimum 6 characters" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="createUser()">
                    <i class="fas fa-check me-2"></i>Create User
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon bg-info">
                        <i class="fas fa-user-edit"></i>
                    </div>
                    <div>
                        <h5 class="modal-title">Edit User</h5>
                        <p class="modal-subtitle">Update user information</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <input type="hidden" id="editUserId" />
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editFullName" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="editEmail" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Role <span class="text-danger">*</span></label>
                            <select class="form-control" id="editRole" required>
                                <option value="Admin">Admin</option>
                                <option value="Employee">Employee</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Department</label>
                            <input type="text" class="form-control" id="editDept" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="updateUser()">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    <script>
        let Table1;

        function reInitializeSelect2() {
            $('#createRole').select2('destroy');
            $('#editRole').select2('destroy');

            $('#createRole').select2({
                theme: 'bootstrap-5',
                placeholder: 'Select an option',
                dropdownParent: $('#createUserModal'),
                allowClear: true
            });

            $('#editRole').select2({
                theme: 'bootstrap-5',
                placeholder: 'Select an option',
                dropdownParent: $('#editUserModal'),
                allowClear: true
            });
        }
        function initializeDataTable() {
            Table1 = $('#usersTable').DataTable({
                responsive: false,
                scrollX: true,
                pageLength: 25,
                order: [[6, 'desc']], // Sort by created date
                language: {
                    search: "",
                    searchPlaceholder: "🔍 Search users...",
                    lengthMenu: "Show _MENU_ users",
                    info: "Showing _START_ to _END_ of _TOTAL_ users",
                    emptyTable: `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-user fa-2x mb-2"></i>
                            <p class="mb-0">No users found</p>
                        </div>
                    `,
                    zeroRecords : `
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-search fa-2x mb-2"></i>
                            <p class="mb-0">No matching users found</p>
                        </div>
                    `,
                    paginate: {
                        previous: "‹",
                        next: "›"
                    }
                },
                dom:
                    "<'row mb-3'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row mt-3'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
            });
        }

        $(document).ready(function() {
            initializeDataTable();
            reInitializeSelect2();
        });
        
        function createUser() {
            const data = {
                employeeId: $('#createEmployeeId').val().trim(),
                fullName: $('#createFullName').val().trim(),
                email: $('#createEmail').val().trim(),
                role: $('#createRole').val(),
                deptName: $('#createDept').val().trim(),
                password: $('#createPassword').val()
            };
            
            if (!data.employeeId || !data.fullName || !data.email || !data.role || !data.password) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Information',
                    text: 'Please fill in all required fields',
                    confirmButtonColor: '#7aa22e'
                });
                return;
            }
            
            if (data.password.length < 6) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Password',
                    text: 'Password must be at least 6 characters',
                    confirmButtonColor: '#7aa22e'
                });
                return;
            }
            
            $.ajax({
                url: '@Url.Action("CreateUser", "Admin")',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message,
                            confirmButtonColor: '#7aa22e'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                            confirmButtonColor: '#7aa22e'
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to create user',
                        confirmButtonColor: '#7aa22e'
                    });
                }
            });
        }
        
        function editUser(id, name, email, role, dept) {
            $('#editUserId').val(id);
            $('#editFullName').val(name);
            $('#editEmail').val(email);
            $('#editRole').val(role).trigger('change');
            $('#editDept').val(dept || '');
            
            const modal = new bootstrap.Modal(document.getElementById('editUserModal'));
            modal.show();
        }
        
        function updateUser() {
            const data = {
                userId: $('#editUserId').val(),
                fullName: $('#editFullName').val().trim(),
                email: $('#editEmail').val().trim(),
                role: $('#editRole').val(),
                deptName: $('#editDept').val().trim()
            };
            
            $.ajax({
                url: '@Url.Action("UpdateUser", "Admin")',
                type: 'POST',
                data: data,
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message,
                            confirmButtonColor: '#7aa22e'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                            confirmButtonColor: '#7aa22e'
                        });
                    }
                }
            });
        }
        
        function toggleUserStatus(userId, isActive) {
            const action = isActive ? 'deactivate' : 'activate';
            Swal.fire({
                title: 'Confirm Action',
                text: `Do you want to ${action} this user?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#7aa22e',
                cancelButtonColor: '#6b7280',
                confirmButtonText: `Yes, ${action}`,
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("ToggleUserStatus", "Admin")',
                        type: 'POST',
                        data: { userId: userId, isActive: !isActive },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Success!',
                                    text: response.message,
                                    confirmButtonColor: '#7aa22e'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                    confirmButtonColor: '#7aa22e'
                                });
                            }
                        }
                    });
                }
            });
        }
        
        function resetPassword(userId, userName) {
            Swal.fire({
                title: 'Reset Password',
                html: `
                    <p class="mb-3">Enter new password for <strong>${userName}</strong></p>
                    <input type="password" id="swal-password" class="swal2-input" placeholder="New Password" style="margin: 0;">
                `,
                showCancelButton: true,
                confirmButtonText: 'Reset Password',
                confirmButtonColor: '#7aa22e',
                cancelButtonColor: '#6b7280',
                preConfirm: () => {
                    const password = document.getElementById('swal-password').value;
                    if (!password) {
                        Swal.showValidationMessage('Password is required');
                        return false;
                    }
                    if (password.length < 6) {
                        Swal.showValidationMessage('Password must be at least 6 characters');
                        return false;
                    }
                    return password;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("ResetUserPassword", "Admin")',
                        type: 'POST',
                        data: { userId: userId, newPassword: result.value },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Success!',
                                    text: response.message,
                                    confirmButtonColor: '#7aa22e'
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                    confirmButtonColor: '#7aa22e'
                                });
                            }
                        }
                    });
                }
            });
        }

        function exportUsers() {
            window.location.href = '@Url.Action("ExportUsers", "Admin")';
        }
    </script>
}

@section Styles {
